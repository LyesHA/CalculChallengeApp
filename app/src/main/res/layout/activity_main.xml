<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editTextResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="1"
            android:textSize="25dp"
            style="@style/textViews"
            android:textColor="#FDFFFD"
            android:background="#213123"
            android:layout_gravity="center"
            android:inputType="text"
            android:textAlignment="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewOperation"
            style="@style/textViews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="25dp" />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:stretchColumns="*"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <Button
                android:id="@+id/btnSept"
                style="@style/btnNumbers"
                android:text="7" />

            <Button
                android:id="@+id/btnHuit"
                style="@style/btnNumbers"
                android:text="8" />

            <Button
                android:id="@+id/btnNeuf"
                style="@style/btnNumbers"
                android:text="9" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/btnQuatre"
                style="@style/btnNumbers"
                android:text="4" />

            <Button
                android:id="@+id/btnCinq"
                style="@style/btnNumbers"
                android:text="5" />

            <Button
                android:id="@+id/btnSix"
                style="@style/btnNumbers"
                android:text="6" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/btnUn"
                style="@style/btnNumbers"
                android:text="1" />

            <Button
                android:id="@+id/btnDeux"
                style="@style/btnNumbers"
                android:text="2" />

            <Button
                android:id="@+id/btnTrois"
                style="@style/btnNumbers"
                android:text="3" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/btnZero"
                style="@style/btnNumbers"
                android:text="0" />

            <Button
                android:id="@+id/btnPoint"
                style="@style/btnNumbers"
                android:text="." />

            <Button
                android:id="@+id/btnMoins"
                style="@style/btnNumbers"
                android:text="-"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/btnClear"
                android:text="Clear"
                style="@style/btnResults"
                />

            <Button
                android:id="@+id/btnGenerate"
                android:text="Generate"
                style="@style/btnResults"
                />

            <Button
                android:id="@+id/btnQuit"
                android:text="Quit"
                style="@style/btnResults"
                 />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/btnEgale"
                android:text="="
                style="@style/btnShow"
                />

            <Button
                android:id="@+id/btnShowAll"
                android:text="Show All"
                style="@style/btnShow"
                 />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewTimer"
            style="@style/textViews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="60"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="25dp" />

    </LinearLayout>
</LinearLayout>