<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="btnResults">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">#FFC813</item>
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/myfont</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="btnShow">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.5</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/myfont</item>
        <item name="android:backgroundTint">#383738</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="btnNumbers">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:fontFamily">@font/myfont</item>
        <item name="android:textSize">18dp</item>
        <item name="android:backgroundTint">#5146A9</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="textViews">
        <item name="android:textColor">#2B253B</item>
        <item name="android:fontFamily">@font/myfont</item>
        <item name="android:textSize">18dp</item>
        <item name="android:backgroundTint">#5146A9</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
